
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<style>
    .square {
        background: #F2F2F2;
        width: 100%;
        height: 100%;
    }

    h1, h2 {
        color: #2a2b6e;
    }

    p {
        color: #5dba47 !important;
    }
</style>

<div class="notify" style="color: @ViewBag.Color ; font-weight:bold;" id="alertMsg">
    @ViewBag.Message
</div>

<div style="min-height:700px;">

    <br />
    <div class="row text-center">
        <h1><strong><u>Dashboard</u></strong></h1>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Agents</strong></p></center>
                <br />
                <center><h2>  @ViewBag.AgentCount</h2></center>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Active Clients</strong></p></center>
                <br />
                <center><h2> @ViewBag.ClientCount</h2></center>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-lg-8 p-20 m-20">
            <div class="square">
                <br /><br />
                <center><p><strong>Invitation Link</strong></p></center>
                <br />
                <center><h2>  @ViewBag.InviteLink</h2></center>
            </div>
        </div>
        
    </div>


</div>



